@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "List of all users";
}



    <p >
    <h4 class="text-light">List of all users</h4>
    </p>
<div class="text-light" style="width: 90%; overflow-x: auto;">
    <table>
            <tr class="text-center text-light" >
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
            @foreach (ApplicationUser item in Model)
            {
            <tr class="text-center text-light">
                <td style="padding: 10px;">
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td style="padding: 10px;">
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td style="padding: 10px;">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td style="padding: 10px;">
                    <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@item.Id">
                        Update
                    </a>                            
                </td>
                <td style="padding: 10px;">
                    <form asp-action="DeleteUser" asp-route-id="@item.Id" method="post">
                        <button type="submit" onclick="return DeleteU()" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>                    
            </tr>
            }
    </table>
</div>


<script>
    function DeleteU() {
        var result = confirm("Are You Sure You Want To Delete The User?")
        if (result) {
            return true;
        }
        else {
            return false;
        }
    }
</script>

